    "@types/xmldom": "^0.1.34",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rollup": "^4.36.0",
    "ts-jest": "^29.2.6",
